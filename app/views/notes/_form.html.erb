<div class="col-md-4 col-md-offset-4 container">
  <div class="well">
  <%if @note.errors.any? %>
  <ul>
    <% @note.errors.full_messages.each do |mess| %>
    
      <li><%= mess %></li>
  </ul>
     <% end %>
<% end %>
<%= form_with model: @note, local: true do |form| %>
  <span class="border border-light">
  <p>
    <%= form.label :title,required: true %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :tag %><br>
    <%= form.text_field :tag %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
</span>
<% end %>
<%= link_to 'Notes List', notes_path ,class: "btn btn-info"%>
</div>
</div>
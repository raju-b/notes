<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %> 
</head>
  <body class="mt-30">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>
      <div class="row mtn-40 mb-5">
        <div class="col-10 text-right">
          <%= link_to "LogOut", destroy_user_session_path, method: 'delete', class: "btn btn-danger btn-sm float-right"%>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
